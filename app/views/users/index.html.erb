<h1 align="center"> All Alpha Bloggers </h1>
<div align="center">
	<%= will_paginate %>
</div>
<%= @users.each do |user| %>
<div align="center">
	<ul class="listing">
		<div class="row">
			<div class="col-md-4 col-md-offset-4">
				<li>
					<%= link_to gravatar_for(user), user_path(user) %> 
				</li>
				<li class="article-title"> 
					<%= link_to user.username, user_path(user) %>
				</li>
				<li>
					<small><%= pluralize(user.articles.count, "article") if user.articles %> 
					</small>
				</li>
				<% if logged_in? && current_user.admin? %>
				<li>
					<%= link_to "Delete this User", user_path(user), method: :delete,data: {confirm: "Are you sure want to delete user and all their articles"}, class: "btn btn-danger btn-sm" %> 
				</li>

				<% end %>
			</div>
		</div>
	</ul>
</div>
<% end %>
<div align="center">
	<%= will_paginate %>
</div>